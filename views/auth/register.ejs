<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - UMP Job Connect</title>
  <link rel="stylesheet" href="/css/style.css">
  <script>
    function toggleForm() {
      const userType = document.getElementById('userType').value;
      document.getElementById('studentForm').style.display = userType === 'student' ? 'block' : 'none';
      document.getElementById('facultyForm').style.display = userType === 'faculty' ? 'block' : 'none';
    }
  </script>
</head>
<body>
  <nav>
    <div class="container">
      <a href="/" class="logo">UMP Job Connect</a>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/jobs">Browse Jobs</a></li>
        <li><a href="/auth/login">Login</a></li>
      </ul>
    </div>
  </nav>

  <main>
    <div class="container">
      <div class="card" style="max-width: 600px; margin: 2rem auto;">
        <h2>Register</h2>

        <% if (error) { %>
          <div class="alert alert-error"><%= error %></div>
        <% } %>

        <div class="form-group">
          <label>Register as:</label>
          <select id="userType" onchange="toggleForm()">
            <option value="student">Student</option>
            <option value="faculty">Faculty Admin</option>
          </select>
        </div>

        <!-- Student Registration Form -->
        <div id="studentForm">
          <form action="/auth/register/student" method="POST">
            <div class="form-group">
              <label>Student Number (9 digits):</label>
              <input type="text" name="student_number" pattern="\d{9}" required>
            </div>

            <div class="form-group">
              <label>Email:</label>
              <input type="email" name="email" required>
            </div>

            <div class="form-group">
              <label>First Name:</label>
              <input type="text" name="first_name" required>
            </div>

            <div class="form-group">
              <label>Last Name:</label>
              <input type="text" name="last_name" required>
            </div>

            <div class="form-group">
              <label>Password:</label>
              <input type="password" name="password" minlength="6" required>
            </div>

            <button type="submit" class="btn">Register as Student</button>
          </form>
        </div>

        <!-- Faculty Registration Form -->
        <div id="facultyForm" style="display: none;">
          <form action="/auth/register/faculty" method="POST">
            <div class="form-group">
              <label>Staff Number:</label>
              <input type="text" name="staff_number" required>
            </div>

            <div class="form-group">
              <label>Email:</label>
              <input type="email" name="email" required>
            </div>

            <div class="form-group">
              <label>First Name:</label>
              <input type="text" name="first_name" required>
            </div>

            <div class="form-group">
              <label>Last Name:</label>
              <input type="text" name="last_name" required>
            </div>

            <div class="form-group">
              <label>Faculty:</label>
              <select name="faculty" required>
                <option value="">Select Faculty</option>
                <option value="Faculty of Agriculture and Environmental Sciences">Agriculture and Environmental Sciences</option>
                <option value="Faculty of Economics and Management Sciences">Economics and Management Sciences</option>
                <option value="Faculty of Education">Education</option>
                <option value="Faculty of Humanities">Humanities</option>
                <option value="Faculty of Science and Technology">Science and Technology</option>
              </select>
            </div>

            <div class="form-group">
              <label>Phone:</label>
              <input type="tel" name="phone">
            </div>

            <div class="form-group">
              <label>Password:</label>
              <input type="password" name="password" minlength="6" required>
            </div>

            <button type="submit" class="btn">Register as Faculty</button>
          </form>
        </div>

        <p style="margin-top: 1rem;">Already have an account? <a href="/auth/login">Login here</a></p>
      </div>
    </div>
  </main>

  <footer>
    <div class="container">
      <p>&copy; 2025 University of Mpumalanga Job Connect. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
